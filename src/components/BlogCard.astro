---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  slug: string;
  title: string;
  description: string;
  date: Date;
  cover: ImageMetadata;
  tags: string[];
}

const { slug, title, description, date, cover, tags } = Astro.props;
const formattedDate = date.toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/woodworking/${slug}`} data-astro-prefetch class="group block rounded-lg border border-gray-200 bg-white overflow-hidden shadow-md hover:shadow-xl hover:border-gray-300 transition-all">
  <div class="aspect-video overflow-hidden">
    <Image
      src={cover}
      alt={title}
      width={600}
      densities={[1.5, 2]}
      format="webp"
      quality={80}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
      decoding="async"
      transition:name={`cover-${slug}`}
    />
  </div>
  <div class="p-5">
    <time datetime={date.toISOString()} class="text-xs text-gray-400">{formattedDate}</time>
    <h2 class="text-lg font-bold text-gray-900 group-hover:text-accent-700 mt-1 mb-2" transition:name={`title-${slug}`}>
      {title}
    </h2>
    <p class="text-sm text-gray-500 mb-3">{description}</p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <span class="px-2 py-0.5 text-xs bg-accent-50 text-accent-700 rounded-full">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
