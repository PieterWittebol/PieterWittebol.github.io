---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

const posts = (await getCollection('woodworking'))
  .filter((entry) => !entry.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="Woodworking" description="Project builds, tips, and reflections from the workshop.">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-10 animate-fade-in">
      Woodworking
    </h1>

    {posts.length > 0 ? (
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {posts.map((post, index) => (
          <div class="animate-scale-in" style={`animation-delay: ${index * 100}ms`}>
            <BlogCard
              slug={post.id}
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              cover={post.data.cover}
              tags={post.data.tags}
            />
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-24 animate-fade-in">
        <p class="text-2xl font-bold text-gray-300">Nothing here ... yet</p>
        <p class="text-sm text-gray-400 mt-2">Check back soon for new projects.</p>
      </div>
    )}
  </div>
</Layout>
